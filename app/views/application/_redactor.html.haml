:coffeescript
  $("#{id}").wysihtml5
    locale: 'ru-RU'
  ###
  window.redactor_path = "http://#{request.host}/assets/redactor"
  window.redactor_css = "#{asset_path('redactor/style.css').match(/\/([^\/]*)\z/)[1..-1][0]}"
  $(window).load ()->
    $("#{id}").redactor
      lang: 'ru'
      path: window.redactor_path
      css: window.redactor_css
  ###
