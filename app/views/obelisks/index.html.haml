%div.well.row.places-list
  - Obelisk.roots.order(:name).each do |r|
    - if r.has_places?
      %div.span3
        %h1= "#{r.name}"
        - r.children.order(:address).each do |c|
          - if c.has_places? or r.node?
            %div= link_to c.name, c
      
= paginate @places
%ul.thumbnails
  - @places.each do |p|
    = render :partial => 'places/thumb', :locals => {:p => p}
    -#%li.thumbnail
      %div
        
        %a{:href => url_for(p)}= image_tag( p.photos.first.nil? ? image_path('need_photos.png') : p.photos.first.photo.thumb )
= paginate @places
- if can? :create, Obelisk
  = link_to 'Добавить объект', new_obelisk_path, :class => 'btn btn-large btn-danger'
- else
  = link_to 'Добавить объект', '#', :class => 'for-members btn btn-large btn-danger'

