%div.row
  %div.span5
    %h2 Вход
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.input :email
      = f.input :password
      -#%li= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
      - if devise_mapping.rememberable?
        = f.input :remember_me, :as => :boolean
      %br
      = f.submit "Войти", :class=>'btn btn-large btn-danger'
  -#$%div.span5
    %h2 или с помощью:
    - if devise_mapping.omniauthable? and not resource_class.omniauth_providers.empty?
      - resource_class.omniauth_providers.each do |provider|
        = link_to image_tag("social/#{provider.to_s}.png", :title => "Войти через #{provider.to_s}"), omniauth_authorize_path(resource_name, provider)
= render :partial => "devise/shared/links"
